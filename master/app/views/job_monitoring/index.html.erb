<script>
$(document).ready(function(){
  $(document).tooltip();
  $('.dt').DataTable();
});
</script>
<% if session[:all_job_list] %>
   <h1>Project all</h1>
<% else %>
   <h1>Project <%= session[:project] %></h1>
<% end %>
<% if session[:employee] %>
  <% unless session[:all_job_list] %>
    <%= form_tag(:action => "index") do %>
      <%= submit_tag 'All Job List' %>
      <%= hidden_field :option, :all_job_list, :value=>true %>
    <% end %>
  <% else %>
    <%= form_tag(:action => "index") do %>
      <%= submit_tag 'Project Job List' %>
      <%= hidden_field :option, :project_job_list, :value=>true %>
    <% end %>
  <% end %>
<% end %>
<hr/>
<h3>Job List</h3>
<table id="job_list" class="dt pure-table pure-table-bordered">
    <thead>
    <tr>
        <th>Job ID</th>
        <th>Status</th>
        <th></th>
        <th>User</th>
        <th>JobScript</th>
        <th>Log</th>
        <th>DataSet</th>
        <th>Time (Start/End)</th>
    </tr>
    <thead>
    <tbody>
    <% @job_list.each_with_index do |job, i| %>
    <tr>
        <td><%= job[0] %></td>
        <td><%= button_to job[1], "/job_monitoring/#{job[0]}/change_status" %></td>
        <td>
            <% if job[1]=='running' and current_user and job[4]==current_user.login %>
            <%= button_to 'kill', "/job_monitoring/#{job[0]}/kill_job", :confirm=>"Are you sure you want to kill the job
            '#{job[0]}'?" %>
            <% end %>
        </td>
        <td><%= job[4] %></td>
        <td><%= link_to td(job[2]), :action => 'print_script', :job_id => job[0] %></td>
        <td><%= link_to 'Log', :action => 'print_log', :job_id => job[0] %></td>
        <td>
            <% if submit_job = @submit_jobs[i] and submit_job.data_set %>
            <% if @all_job_list %>
            <%= link_to td(submit_job.data_set.name+" (p#{job[5]})"), :controller=>:data_set, :action=>:show,
            :id=>submit_job.next_dataset_id, :project=>job[5] %>
            <% else %>
            <%= link_to td(submit_job.data_set.name), "/data_set/#{submit_job.next_dataset_id}" %>
            <% end %>
            <% end %>
        </td>
        <td><%= job[3].to_s %></td>
    </tr>
    <% end %>
    </tbody>
</table>
<hr/>
Total: <%= @total %> jobs, only recent <%= @page_unit %> jobs are shown.
<hr/>

